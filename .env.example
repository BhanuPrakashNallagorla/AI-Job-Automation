# ==============================================================================
# AutoApply AI - Environment Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# AI API Keys (choose one)
# ------------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
# Get key at: https://aistudio.google.com/app/apikey

# Legacy (optional - keep if also using Claude)
ANTHROPIC_API_KEY=

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./autoapply.db
DATABASE_URL_SYNC=sqlite:///./autoapply.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/autoapply
# DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/autoapply

# ------------------------------------------------------------------------------
# Redis (optional - for caching)
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
CACHE_TTL=604800

# ------------------------------------------------------------------------------
# Gemini Rate Limits (free tier)
# ------------------------------------------------------------------------------
MAX_DAILY_REQUESTS=1400
RATE_LIMIT_RPM=14

# ------------------------------------------------------------------------------
# API Server
# ------------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ALLOWED_ORIGINS=*

# ------------------------------------------------------------------------------
# Scraping Settings (direct scraping - often blocked)
# ------------------------------------------------------------------------------
MAX_SCRAPING_PAGES=10
SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=5
USE_PROXY=false
PROXY_URL=

# ------------------------------------------------------------------------------
# Scraper API Keys (RECOMMENDED - choose at least one for real job data)
# ------------------------------------------------------------------------------

# OPTION 1: Serper.dev (BEST - 2,500 free searches/month)
# Sign up at: https://serper.dev/ (no credit card required)
SERPER_API_KEY=

# OPTION 2: RapidAPI/JSearch (150 free requests/month)
# Sign up at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=

# OPTION 3: ScrapingBee (1,000 free credits)
# Sign up at: https://www.scrapingbee.com/
SCRAPINGBEE_API_KEY=

# ------------------------------------------------------------------------------
# LinkedIn (optional)
# ------------------------------------------------------------------------------
LINKEDIN_SESSION_COOKIE=

# ------------------------------------------------------------------------------
# File Storage
# ------------------------------------------------------------------------------
RESUMES_DIR=data/resumes
COVER_LETTERS_DIR=data/cover_letters
SCRAPED_JOBS_DIR=data/scraped_jobs

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=console
